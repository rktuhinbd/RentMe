<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_bottomsheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Please Select an option for Location: "-->
        <!--android:textSize="22sp"-->
        <!--android:textColor="#000"-->
        <!--android:textAlignment="center"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:weightSum="2.3">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <Button
            android:id="@+id/dialog_button_from_List"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="From List"
            android:textColor="@color/bottomSheetText"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="5dp"
            android:background="@drawable/button_bottomsheet" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <Button
            android:id="@+id/dialog_button_from_map"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="From Map"
            android:textSize="16sp"
            android:textColor="@color/bottomSheetText"
            android:textStyle="bold"
            android:elevation="5dp"
            android:background="@drawable/button_bottomsheet"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:textAlignment="center"/>

</LinearLayout>